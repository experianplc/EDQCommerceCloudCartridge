{
  "functionalSuites": "functional SFRA/**/*.js",
  "suites": "unit/*.js",
  "filterErrorStack": true,

  "capabilities": {
    "acceptInsecureCerts": true
  },

  "environments": [
    {
      "browserName": "chrome",
      "chromeOptions": {
        "args": [
          "window-size=1920,1080",
          "disable-gpu"
        ]
      },
      {     
        "browserName": "node"     
      }
    }
  ],

  "tunnelOptions": {
    "drivers": [
      {
        "name": "chrome",
        "version": "2.37"
      }
    ]
  }
}
